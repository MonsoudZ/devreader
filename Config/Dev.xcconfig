// DevReader Development Configuration
// This file contains development-specific build settings

// Environment Configuration
APP_ENV = dev
LOG_LEVEL = debug
DEBUG_MODE = YES

// Bundle Configuration
PRODUCT_BUNDLE_IDENTIFIER = com.monsoud.devreader.dev
PRODUCT_NAME = DevReader Dev
MARKETING_VERSION = 1.0.0
CURRENT_PROJECT_VERSION = 1

// App Display Configuration
CFBundleDisplayName = DevReader Dev
CFBundleName = DevReader Dev
CFBundleShortVersionString = 1.0.0-dev
CFBundleVersion = 1

// Icon Configuration
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon-Dev

// Build Configuration
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) DEV_READER_DEV=1 DEBUG=1
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) DEV_READER_DEV DEBUG

// Crash Reporting & Analytics
CRASH_REPORTING_DSN = https://dev-crashes.yourdomain.com/api/v1/crashes
ANALYTICS_API_KEY = dev-analytics-key-12345
TELEMETRY_ENABLED = YES
DEBUG_TELEMETRY = YES

// Update Configuration
SPARKLE_FEED_URL = https://updates.yourdomain.com/dev/appcast.xml
AUTO_UPDATE_ENABLED = NO
UPDATE_CHECK_INTERVAL = 0

// Feature Flags
FEATURE_FLAGS_ENABLED = YES
FEATURE_EXPERIMENTAL_UI = YES
FEATURE_BETA_FEATURES = YES
FEATURE_DEBUG_MENU = YES
FEATURE_PERFORMANCE_MONITORING = YES

// Logging Configuration
LOG_LEVEL_DEV = debug
LOG_LEVEL_BETA = info
LOG_LEVEL_PROD = error

// API Endpoints
API_BASE_URL = https://api-dev.yourdomain.com
API_VERSION = v1
API_TIMEOUT = 30

// Database Configuration
DATABASE_NAME = DevReaderDev.sqlite
DATABASE_MIGRATION_DEBUG = YES

// Performance Configuration
MEMORY_WARNING_THRESHOLD = 100
PERFORMANCE_MONITORING = YES
DEBUG_MEMORY_USAGE = YES

// Security Configuration
KEYCHAIN_ACCESS_GROUP = $(PRODUCT_BUNDLE_IDENTIFIER)
HARDENED_RUNTIME = YES
ENABLE_APP_SANDBOX = YES

// Code Signing
CODE_SIGN_IDENTITY = Developer ID Application
CODE_SIGN_STYLE = Automatic
DEVELOPMENT_TEAM = $(DEVELOPMENT_TEAM)
